{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++.exe build active file",
            "command": "g++.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileBasenameNoExtension}.exe",
                "stb_image.h",
                "-lgdi32",
                "-lComdlg32",
                "-w",
            ],
            "problemMatcher": [ "$gcc" ],
            "group": { 
                "kind": "build",
                "isDefault": true,
            }
        }
    ]
}